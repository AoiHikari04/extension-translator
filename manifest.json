{
  "manifest_version": 3,
  "name": "Live Audio Transcriber",
  "version": "1.0",
  "description": "Transcribe audio from any tab with on-screen display",
  "permissions": [
    "tabCapture",
    "offscreen",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "offscreen_documents": "script-src 'self' 'unsafe-eval'; object-src 'self';"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Live Transcriber"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}